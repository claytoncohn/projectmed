<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :picture %>
    <%= f.input :category %>
    <%= f.input :specs %>
    <%= f.input :price %>
    <%= f.input :product_id %>
    <%= f.input :owner %>
    <%= f.input :rating %>
    <%= f.input :image, as: :file%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
