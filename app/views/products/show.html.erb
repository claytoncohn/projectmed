<p id="notice"><%= notice %></p>

<%if @product.image? %>
  <%= image_tag @product.image.url(:main) %>
  <br />
<% end %>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= simple_format(@product.description) %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @product.picture %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category %>
</p>

<p>
  <strong>Specs:</strong>
  <%= simple_format(@product.specs) %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Product:</strong>
  <%= @product.product_id %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @product.owner %>
</p>

<p>
  <strong>Overall Rating:</strong> 
  <%= rating_for @product, "product_rating", disable_after_rate: true, imdb_avg: true %>
</p>

<p>
  <% if current_user %>
    <strong>My Rating:</strong> 
    <%= rating_for_user @product, current_user, "product_rating" %>
  <% end %>
</p>

<!-- <p>
  <strong>Rating:</strong>
  <%= @product.rating %>
  <br>
</p> -->
<div class="row">
  <div class="small-2 large-4 columns">
      <br>
      <br>
  </div>
</div>

<% if current_user %>
  <%- unless current_user.favorite_products.exists?(id: @product.id) -%>
    <%= link_to 'Add to favorites', favorite_products_path(product_id: @product), method: :create %>
  <%- else -%>
    <%= link_to 'Remove from favorites', favorite_product_path(@product), method: :delete %>
  <%- end -%>
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
<% end %>

