<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each_with_index do |user, index| %>
            <tr>
              <td><%= index +=1 %></td>
              <td><%= user.name %></td>
              <%= render user %>
                <td>
                  <% if user != current_user %>
                    <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation", "data-sid" => current_user.id, "data-rip" => user.id %>
                  <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

